<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              >
  <TextView android:text="Robot IP addresses are often not publicly visible from the internet, so without a local WIFI connection you would not be able to connect to them."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
    <Button android:text="It's OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ok_button"/>
    <Button android:text="Enable WIFI now."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enable_button"/>
  </LinearLayout>
</LinearLayout>
