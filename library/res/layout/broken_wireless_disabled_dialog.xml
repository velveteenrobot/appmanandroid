<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                >
  <TextView android:id="@+id/main_text"
            android:text="Is this OK?"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
  <TextView android:id="@+id/sub_text"
            android:layout_below="@id/main_text"
            android:text="Robot IP addresses are often not publicly visible from the internet, so without a local WIFI connection you would not be able to connect to them."
            android:textColor="#dddddd"
            android:textSize="12sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
  <Button android:layout_below="@id/sub_text"
          android:text="It's OK"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ok_button"/>
  <Button android:layout_toRightOf="@id/ok_button"
          android:layout_below="@id/sub_text"
          android:text="Enable WIFI now."
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/enable_button"/>
</RelativeLayout>
